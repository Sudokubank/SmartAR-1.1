<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Create an account"
        android:id="@+id/textView" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="25dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView"
        android:layout_gravity="left"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="First Name"
        android:textColor="#000000"
        android:textSize="17dp" />

 />

    <EditText
        android:id="@+id/fname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="First Name"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#000000"
        android:textSize="17dp" 
        android:singleLine="true"
    	android:lines="1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/textView"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Last Name"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#000000"
        android:textSize="17dp"
        android:singleLine="true"
    	android:lines="1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lname"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dip"
        android:textColor="#000000"
        android:textSize="17dp" 
        android:singleLine="true"
    	android:lines="1"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:text="Username"
        android:textColor="#000000"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/uname"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="10dip"
        android:textColor="#000000"
        android:textSize="17dp" 
        android:singleLine="true"
    	android:lines="1"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignTop="@+id/pword"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/pword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:textColor="#000000"
        android:textSize="17dp"
        android:singleLine="true"
    	android:lines="1" >

        <requestFocus />
    </EditText>
    <TableLayout 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:shrinkColumns="*"  
    android:stretchColumns="*" 
    android:background="#ffffff" > 
    
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   
	    android:gravity="center_horizontal" >

	    <TextView
	        android:id="@+id/textAddress"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:text="Address"
	        android:textColor="#000000"
	        android:textSize="17dp"
	         />

	</TableRow> 
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"

	    android:gravity="center_horizontal" >

		<EditText
		    android:id="@+id/regAddress1"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_marginTop="5dp"
		    android:layout_weight="1"
		    android:background="@drawable/rounded_edittext"
		    android:ems="10"
		    android:hint="Address Line 1"
		    android:inputType="text"
		    android:padding="10dip"
		    android:textColor="#000000"
		    android:textSize="17dp"
		    android:singleLine="true"
    		android:lines="1" />

	</TableRow>
	
	<TableRow 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:gravity="center_horizontal">  

	    <EditText
	        android:id="@+id/regAddress2"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:hint="Address Line 2"
	        android:inputType="text"
	        android:padding="10dip"
	        android:textColor="#000000"
	        android:textSize="17dp" 
	        android:singleLine="true"
    		android:lines="1"/>

	</TableRow>
	
	<TableRow 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:gravity="center_horizontal">  

	    <TextView
	        android:id="@+id/textCity"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:text="City"
	        android:textColor="#000000"
	        android:textSize="17dp" />

	    <TextView
	        android:id="@+id/textState"
	        android:layout_marginLeft="-100dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:text="State"
	        android:textColor="#000000"
	        android:textSize="17dp" />

	</TableRow>
	
	
	<TableRow 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:gravity="center_horizontal"> 

	    <EditText
	        android:id="@+id/regCity"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="230dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:hint="City"
	        android:inputType="text"
	        android:lines="1"
	        android:padding="10dip"
	        android:singleLine="true"
	        android:textColor="#000000"
	        android:textSize="17dp" />
    	
	    <EditText
	        android:id="@+id/regState"
	        android:layout_marginLeft="-110dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:gravity="left"
	        android:hint="State"
	        android:inputType="text"
	        android:lines="1"
	        android:padding="10dip"
	        android:singleLine="true"
	        android:textColor="#000000"
	        android:textSize="17dp" />

	 </TableRow>
    
	<TableRow 
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent" 
        android:gravity="center_horizontal">

		<TextView
		    android:id="@+id/textPostal"
		    android:layout_marginLeft="10dp"
		    android:layout_marginTop="10dp"
		    android:layout_weight="1"
		    android:gravity="left"
		    android:text="Postal Code"
		    android:textColor="#000000"
		    android:textSize="17dp" />

	     <TextView
	         android:id="@+id/textCountry"
	         android:layout_marginLeft="-100dp"
	         android:layout_marginTop="10dp"
	         android:layout_weight="1"
	         android:gravity="left"
	         android:text="Country"
	         android:textColor="#000000"
	         android:textSize="17dp" />

	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal" >

	    <EditText
	        android:id="@+id/regPostal"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="230dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:hint="Postal Code"
	        android:inputType="number"
	        android:lines="1"
	        android:padding="10dip"
	        android:singleLine="true"
	        android:textColor="#000000"
	        android:textSize="17dp" />
    
	    <EditText
	        android:id="@+id/regCountry"
	        android:layout_marginLeft="-110dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:hint="Country"
	        android:padding="10dip"
	        android:textColor="#000000"
	        android:textSize="17dp"
	        android:singleLine="true"
    		android:lines="1" />

    </TableRow>
    
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal" >
	    <TextView
	        android:id="@+id/textPhone"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:text="Phone"
	        android:textColor="#000000"
	        android:textSize="17dp" />

	</TableRow>

	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal" >

	    <EditText
	        android:id="@+id/regPhone"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:layout_weight="1"
	        android:background="@drawable/rounded_edittext"
	        android:hint="phone"
	        android:inputType="phone"
	        android:padding="10dip"
	        android:textColor="#000000"
	        android:textSize="17dp" />
	</TableRow>
     
	</TableLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/register_error"
        android:layout_below="@+id/register"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/register"
        style="@style/btnStyleShakespeare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <Button
        android:id="@+id/bktologin"
        style="@style/btnStyleShakespeare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pword"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:text="Back To Login"
        android:textColor="#ffffff"
        android:textSize="17dp" />

</LinearLayout>
</ScrollView>