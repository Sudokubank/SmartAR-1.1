<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.slidignmenu.LoginFragment"
    android:background="@color/white" >

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="Welcome to SmartAR"
    android:id="@+id/textWelcome" android:layout_gravity="center"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:textColor="#000000"
    android:gravity="center"
    android:textSize="20dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textWelcome"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/rounded_edittext"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="15dp" 
        android:paddingLeft="10dip"
        android:singleLine="true"
    	android:lines="1" />

    <Button
        android:id="@+id/login"
        style="@style/btnStyleShakespeare"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pword"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="15dp"
         />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/email"
        android:layout_marginLeft="10dip"
        android:gravity="center|left"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/pword"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:layout_marginRight="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15dp" 
        android:paddingLeft="10dip" 
        android:singleLine="true"
    	android:lines="1" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/pword"
        android:layout_marginLeft="10dip"
        android:gravity="fill|left"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/loginErrorMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login"
        android:textColor="#000000" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:text="Forgot Password?"
    android:id="@+id/passres"
    android:layout_below="@+id/loginErrorMsg"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:textSize="13dp"
    android:textColor="#000000"
    android:gravity="center" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passres">

        <TextView
            android:id="@+id/textNewcust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="New Customer?" />

        <TextView
            android:id="@+id/textYourewelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="You are welcome to register a new account!" />

        <Button
            android:id="@+id/registerbtn"
            style="@style/btnStyleShakespeare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pword"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="15dp"
            android:text="Register"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        </LinearLayout>
</RelativeLayout>
